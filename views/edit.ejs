<% include partials/header %>
<div class="ui main container text segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form action="/blogs/<%=blog._id%>?_method=PUT" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>        
            <input type="text" value="<%=blog.title%>" name="blog[title]">
        </div>
        <div class="field">
            <label>Image</label>        
            <input type="text" value="<%=blog.image%>" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%=blog.body%></textarea>
        </div>
        <button class="ui teal basic button">Submit</button>
    </form>
</div>
<% include partials/footer %>
