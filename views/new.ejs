<% include partials/header %>
<div class="ui main container text segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>        
            <input type="text" placeholder="Blog Title" name="blog[title]">
        </div>
        <div class="field">
            <label>Image</label>        
            <input type="text" placeholder="Image URL" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea placeholder="Content" name="blog[body]" required></textarea>
        </div>
        <button class="ui teal basic button">Submit</button>
    </form>
</div>
<% include partials/footer %>
